# Sudoers configuration for Client St0r automatic fail2ban installation
# Install: sudo cp /home/administrator/deploy/clientst0r-install-sudoers /etc/sudoers.d/clientst0r-install
# Permissions: sudo chmod 0440 /etc/sudoers.d/clientst0r-install

# Allow administrator user to install and configure fail2ban without password
administrator ALL=(ALL) NOPASSWD: /usr/bin/apt-get update
administrator ALL=(ALL) NOPASSWD: /usr/bin/apt-get install -y fail2ban
administrator ALL=(ALL) NOPASSWD: /bin/systemctl enable fail2ban
administrator ALL=(ALL) NOPASSWD: /bin/systemctl start fail2ban
administrator ALL=(ALL) NOPASSWD: /bin/systemctl status fail2ban
administrator ALL=(ALL) NOPASSWD: /bin/cp /home/administrator/deploy/clientst0r-fail2ban-sudoers /etc/sudoers.d/clientst0r-fail2ban
administrator ALL=(ALL) NOPASSWD: /bin/chmod 0440 /etc/sudoers.d/clientst0r-fail2ban
